{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Messenger Desktop",
  "version": "0.1.0",
  "identifier": "com.messenger.desktop",
  "build": {
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "category": "Social Networking",
    "shortDescription": "Native Messenger desktop client",
    "longDescription": "A native desktop wrapper for Facebook Messenger with notifications, system tray, multi-account support, dark/light themes, global keyboard shortcuts, and auto-updater.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "dmg": {
        "windowSize": { "width": 660, "height": 400 },
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 }
      }
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": ["English"],
        "compression": "lzma"
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libappindicator3-1",
          "librsvg2-bin"
        ]
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "rpm": {
        "release": "1"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Messenger",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "https://www.messenger.com"
      }
    ],
    "security": {
      "csp": "default-src https://www.messenger.com https://*.messenger.com https://*.facebook.com https://*.fbcdn.net;"
    }
  }
}
