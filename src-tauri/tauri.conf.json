{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Messenger Desktop",
  "version": "0.2.2",
  "identifier": "com.messenger.desktop",
  "build": {
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "category": "Social Networking",
    "shortDescription": "Privacy-first multi-platform social hub",
    "longDescription": "Native desktop client for Instagram, Messenger, Facebook, and X with session isolation and zero cookie persistence.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "dmg": {
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": [
          "English"
        ],
        "compression": "lzma"
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libappindicator3-1",
          "librsvg2-bin"
        ]
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "rpm": {
        "release": "1"
      }
    }
  },
  "app": {
    "windows": [
      {
        "title": "Social Hub",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri://localhost https://www.messenger.com https://*.messenger.com https://*.facebook.com https://*.fbcdn.net https://www.instagram.com https://*.instagram.com https://*.cdninstagram.com https://x.com https://*.x.com https://*.twimg.com; img-src * data: blob:; media-src * blob:; connect-src *; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
    }
  }
}