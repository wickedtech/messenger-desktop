{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Messenger Desktop",
  "version": "0.1.0",
  "identifier": "com.messenger.desktop",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Messenger",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "url": "https://www.messenger.com"
      }
    ],
    "security": {
      "csp": "default-src https://www.messenger.com https://*.messenger.com https://*.facebook.com https://*.fbcdn.net;"
    }
  }
}